.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
  background: #efefef;
  font-size: 12px;
}
.my-btn{display: inline-block;border-radius: 4px;cursor: pointer;
	-webkit-appearance: none;
	transition: all .3s;
	-webkit-transition: all .3s;
	box-sizing: border-box;
  padding:0 80rpx;
  }
  .my-btn-hove{opacity: .8;
	filter: alpha(opacity=80);
  border-radius: 4px;
	color: #fff}
.section{background: #fff;padding: 30rpx 10rpx;box-sizing: border-box;}

.section textarea{border: 1px solid #ccc;width:auto;padding:20rpx;height:auto;overflow: hidden;min-height:16px;}

.section .sendbtn{display: flex;margin: 10px 20px 0 0;}
.section .sendbtn text:nth-child(1) {
  flex: 1;
}
