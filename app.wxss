.ml-5{margin-left: 5px}.ml-10{margin-left: 10px}.ml-15{margin-left: 15px}.ml-20{margin-left: 20px}.ml-25{margin-left: 25px}

.bd-b{border-bottom: 2px solid #0cdceb}

.bd-clicle{border-radius: 100%}
.pull-right{float: right}

.boxshadow{box-shadow: 0 2px 4px #ccc}

.c-white{color: #FFF}
.c-999{color:#999}
.c-666{color:#666}
.c-333{color:#333}
.c-main{color:#999}

.mpanel{display: block; padding: 20rpx;background: rgb(255, 255, 255);margin-bottom: 20rpx}
.mpanel .h2{font-size: 18px;padding: 10rpx 0 30rpx 0;}

.mpanel .mheader{padding: 10rpx 0;line-height: 40rpx;position: relative}
.mpanel .mheader .text{display: inline-block;padding-left:10rpx;vertical-align: middle;font-size: 12px;color:rgb(32, 31, 31);margin-top: -5rpx;font-weight: 100}
.mpanel .mheader .avatar{display: inline-block;vertical-align: middle}
.mpanel .mheader .avatar .img{width: 50rpx;height:50rpx;border-radius: 50%}
.mpanel .title{display: block;font-size: 16px;padding: 10rpx 0 20rpx 0}
.mpanel .mbody{font-size: 14px;}
.mpanel .mfooter{padding: 10rpx 0 20rpx 0;margin-top: 20rpx;color:#7e7e7e}
.mpanel .mfooter .left{display: inline-block;}
.mpanel .mfooter .right{display: inline-block;float: right;margin-right: 10rpx;vertical-align: middle}
.mpanel .mfooter .right .span{display: inline-block;margin-left: 40rpx;vertical-align: middle;}
.iconsize{position: relative;top:5rpx;padding-right: 10rpx}
.pospublish{position: fixed;bottom: 200rpx;right:40rpx;width: 80rpx;height:80rpx;line-height: 80rpx; text-align:center;background: #FFF;vertical-align: middle;z-index: 9999;padding: 2px 0 0 0}

.btn-radius{border-radius: 80px;}

