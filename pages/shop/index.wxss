/* pages/shop/index.wxss */
.pull-left{float: left}
.pull-right{float: right}
.mt-10{margin-top: 10rpx}
.c-orange{color: orange}
.mr-0{margin-right:0px;}.mr-5{margin-right:5rpx;}.mr-10{margin-right:10rpx;}.mr-0{margin-right:0px;}

.shop{position: relative;margin: 10rpx}
.section{width: 100%;height: auto; display: inline-table;position: relative;border-bottom:1px solid rgb(243, 242, 242);clear: inherit;margin-bottom: 10rpx;padding: 10rpx 0}
.section .img{display: inline-block;float: left; width: 30%;overflow: hidden}
.section .desc{display: inline-block;float: left;width: 55%;overflow: hidden;padding: 0rpx}
.section .contact{display: inline-block;float: left;width: 15%;overflow: hidden;text-align: center;vertical-align: middle;margin-top: 20rpx}
.section .contact .date{font-size: 12px;margin-top: 45rpx;color:darkgray}
.section_title{width: 100%; font-size: 14px;font-weight: 100;  overflow: hidden;text-overflow: ellipsis;display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical;}
.section_span{ font-size: 12rpx;color:#ccc}
.section_tag{ font-size: 12rpx;color:#ccc;float: left;margin-right: 5rpx;padding: 0 5rpx; background: rgb(248, 195, 195);color:#fff}
.section_p{display: block; font-size: 12px;color:rgb(99, 97, 97);clear: both}
